{
	"name": "webapp-template",
	"type": "module",
	"private": true,
	"workspaces": [
		"backend",
		"frontend",
		"shared"
	],
	"scripts": {
		"prepare": "lefthook install",
		"dev:backend": "bun --filter backend dev",
		"dev:frontend": "bun --filter frontend dev",
		"dev:storybook": "bun --filter frontend storybook",
		"dev": "concurrently \"bun --filter backend dev\" \"bun --filter frontend dev\" \"bun --filter frontend storybook\"",
		"build:frontend": "bun --filter frontend build",
		"deploy:backend": "bun --filter backend deploy",
		"deploy:frontend": "bun --filter frontend deploy:prod",
		"deploy:init-frontend": "bun --filter frontend init-pages",
		"typecheck:frontend": "bun --filter frontend typecheck",
		"typecheck:backend": "bun --filter backend typecheck",
		"typecheck": "concurrently \"bun --filter frontend typecheck\" \"bun --filter backend typecheck\"",
		"biome": "biome check .",
		"biome:write": "biome check --write .",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@evilmartians/lefthook": "^1.12.6",
		"@testing-library/react": "^16.3.2",
		"@testing-library/react-hooks": "^8.0.1",
		"@vitest/coverage-v8": "^4.0.18",
		"happy-dom": "^20.4.0",
		"vitest": "^4.0.18"
	}
}
